<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Team">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/orl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_office"
                        android:text="@string/office_bearers"
                        android:textSize="24sp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="horizontal"
                        android:id="@+id/office_recycler"
                        android:layout_alignParentBottom="true"
                        tools:listitem="@layout/h_item"
                        android:layout_marginTop="50dp"/>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fyrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orl">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_final"
                        android:text="Final Years"
                        android:textSize="24sp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/final_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="50dp"
                        tools:listitem="@layout/h_item" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/trl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fyrl"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_3year"
                        android:text="Thirs Years"
                        android:textSize="24sp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:id="@+id/third_recycler"
                        android:layout_alignParentBottom="true"
                        tools:listitem="@layout/h_item"
                        android:layout_marginTop="50dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/srl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/trl"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_2year"
                        android:text="Second Years"
                        android:textSize="24sp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:id="@+id/second_recycler"
                        android:layout_alignParentBottom="true"
                        tools:listitem="@layout/h_item"
                        android:layout_marginTop="50dp"/>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


</FrameLayout>